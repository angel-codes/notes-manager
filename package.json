{
  "name": "notes-manager",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.4",
    "autoprefixer": "^10.0.1",
    "cross-env": "^7.0.2",
    "postcss-cli": "^8.1.0",
    "prettier": "^2.1.2",
    "prettier-plugin-tailwind": "^2.1.9",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-scripts": "3.4.3",
    "tailwindcss": "^1.9.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
